<div class="modal-header">
    <h5 class="modal-title">{{ produit.nom }}</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <img src="images/descriptions/{{ produit.id }}.jpg" onerror="this.onerror=null;this.src='images/unavailable.jpg';" class="mx-auto d-block img-produit">
	<p>Fabriquant: {{ produit.idCategorie.nom }}</p>
	<p>{{ produit.description }}</p>
	<p>prix: {{ produit.prix }}$</p>
    <p>Stock: {{ produit.qtte_stock }}</p>
</div>
<div class="modal-footer">
    <!-- Form to add to the cart -->
    <form action="{{ path('add_to_cart', {'id': produit.id}) }}" method="POST">
        <button type="submit" class="btn btn-panier">
            <img src="images/panier.png" class="img-panier">
        </button>
    </form>
</div>
